import java.util.ArrayList;
import java.util.Scanner;

class CinemaSystem {
    private ArrayList<String> filmAdlari = new ArrayList<>(); // Film adlarÄ±
    private ArrayList<String> filmSureleri = new ArrayList<>(); // Film sÃ¼releri
    private ArrayList<String> filmTurleri = new ArrayList<>(); // Film tÃ¼rleri
    private ArrayList<String> musteriAdlari = new ArrayList<>(); // MÃ¼ÅŸteri adlarÄ±
    private ArrayList<String> musteriEmail = new ArrayList<>(); // MÃ¼ÅŸteri email adresleri
    private ArrayList<ArrayList<String>> biletler = new ArrayList<>(); // MÃ¼ÅŸteri ile film eÅŸleÅŸtirmeleri

    // Film ekleme fonksiyonu
    public void filmEkle() {
        if (filmAdlari.size() >= 10) {
            System.out.println("Maalesef, film kapasitesine ulaÅŸtÄ±k. Maksimum 10 film ekleyebilirsiniz. :)");
            return;
        }

        Scanner scanner = new Scanner(System.in);
        System.out.println("\nHadi yeni bir film ekleyelim! ğŸ¬");
        System.out.print("Film adÄ±: ");
        String filmAdi = scanner.nextLine();
        System.out.print("Film sÃ¼resi (dakika): ");
        String filmSuresi = scanner.nextLine();
        System.out.print("Film tÃ¼rÃ¼: ");
        String filmTuru = scanner.nextLine();

        filmAdlari.add(filmAdi);
        filmSureleri.add(filmSuresi);
        filmTurleri.add(filmTuru);

        System.out.println("\n" + filmAdi + " filmi baÅŸarÄ±yla eklendi. Harika bir seÃ§im! ğŸ˜Š");
    }

    // Film listeleme fonksiyonu
    public void filmListele() {
        if (filmAdlari.isEmpty()) {
            System.out.println("HenÃ¼z eklenmiÅŸ bir film yok. LÃ¼tfen Ã¶nce film ekleyin. ğŸ¥");
            return;
        }

        System.out.println("\nÄ°ÅŸte harika filmlerimiz:");
        for (int i = 0; i < filmAdlari.size(); i++) {
            System.out.println((i + 1) + ". " + filmAdlari.get(i) + " - SÃ¼re: " + filmSureleri.get(i) + " dk - TÃ¼r: " + filmTurleri.get(i));
        }
    }

    // MÃ¼ÅŸteri ekleme fonksiyonu
    public void musteriEkle() {
        if (musteriAdlari.size() >= 20) {
            System.out.println("ÃœzgÃ¼nÃ¼m, mÃ¼ÅŸteri kapasitesine ulaÅŸtÄ±k. Maksimum 20 mÃ¼ÅŸteri kaydedebilirsiniz. ğŸ™");
            return;
        }

        Scanner scanner = new Scanner(System.in);
        System.out.println("\nYeni bir mÃ¼ÅŸteri kaydederek baÅŸlayalÄ±m! ğŸ‘¤");
        System.out.print("MÃ¼ÅŸteri adÄ±: ");
        String musteriAdi = scanner.nextLine();
        System.out.print("MÃ¼ÅŸteri email adresi: ");
        String musteriEmailAdresi = scanner.nextLine();

        musteriAdlari.add(musteriAdi);
        musteriEmail.add(musteriEmailAdresi);
        biletler.add(new ArrayList<>()); // Yeni mÃ¼ÅŸteri iÃ§in bilet listesi

        System.out.println("\nHoÅŸ geldiniz, " + musteriAdi + "! KayÄ±dÄ±nÄ±z baÅŸarÄ±yla tamamlandÄ±. ğŸ‰");
    }

    // MÃ¼ÅŸteri listeleme fonksiyonu
    public void musteriListele() {
        if (musteriAdlari.isEmpty()) {
            System.out.println("HenÃ¼z kaydedilmiÅŸ bir mÃ¼ÅŸteri yok. LÃ¼tfen Ã¶nce mÃ¼ÅŸteri kaydedin. ğŸ™‚");
            return;
        }

        System.out.println("\nBizimle olan mÃ¼ÅŸterilerimiz:");
        for (int i = 0; i < musteriAdlari.size(); i++) {
            System.out.println((i + 1) + ". " + musteriAdlari.get(i) + " - Email: " + musteriEmail.get(i));
        }
    }

    // Bilet oluÅŸturma fonksiyonu
    public void biletOlustur() {
        if (musteriAdlari.isEmpty() || filmAdlari.isEmpty()) {
            System.out.println("LÃ¼tfen Ã¶nce film ve mÃ¼ÅŸteri ekleyin. Film ve mÃ¼ÅŸteri olmadan bilet oluÅŸturulamaz. ğŸ˜Š");
            return;
        }

        Scanner scanner = new Scanner(System.in);
        System.out.println("\nHangi mÃ¼ÅŸteri iÃ§in bilet oluÅŸturmak istersiniz?");
        musteriListele();
        System.out.print("\nBir mÃ¼ÅŸteri seÃ§in (numara girin): ");
        int musteriIndex = scanner.nextInt() - 1;
        if (musteriIndex < 0 || musteriIndex >= musteriAdlari.size()) {
            System.out.println("GeÃ§ersiz mÃ¼ÅŸteri seÃ§imi.");
            return;
        }

        System.out.println("\nHangi filmi izlemek istersiniz?");
        filmListele();
        System.out.print("\nBir film seÃ§in (numara girin): ");
        int filmIndex = scanner.nextInt() - 1;
        if (filmIndex < 0 || filmIndex >= filmAdlari.size()) {
            System.out.println("GeÃ§ersiz film seÃ§imi.");
            return;
        }

        // Bilet kaydÄ±nÄ± oluÅŸtur
        biletler.get(musteriIndex).add(filmAdlari.get(filmIndex));
        System.out.println("\n" + musteriAdlari.get(musteriIndex) + " iÃ§in " + filmAdlari.get(filmIndex) + " filmi baÅŸarÄ±yla kaydedildi. ğŸ¿");
    }

    // Biletleri listeleme fonksiyonu
    public void biletListele() {
        if (biletler.isEmpty()) {
            System.out.println("\nHenÃ¼z herhangi bir bilet kaydedilmemiÅŸ. Belki de bir film izlemek istersiniz? ğŸ¥");
            return;
        }

        System.out.println("\nÄ°ÅŸte kaydedilmiÅŸ biletler:");
        for (int i = 0; i < biletler.size(); i++) {
            if (!biletler.get(i).isEmpty()) {
                System.out.println("\n" + musteriAdlari.get(i) + "'nÄ±n biletleri:");
                for (String film : biletler.get(i)) {
                    System.out.println(" - " + film);
                }
            } else {
                System.out.println(musteriAdlari.get(i) + " iÃ§in bilet bulunmamaktadÄ±r. :)");
            }
        }
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        CinemaSystem system = new CinemaSystem();
        
        while (true) {
            System.out.println("\n--- Sinema Sistemi ---");
            System.out.println("1. Film Ekle");
            System.out.println("2. Film Listele");
            System.out.println("3. MÃ¼ÅŸteri Ekle");
            System.out.println("4. MÃ¼ÅŸteri Listele");
            System.out.println("5. Bilet OluÅŸtur");
            System.out.println("6. Bilet Listele");
            System.out.println("7. Ã‡Ä±kÄ±ÅŸ");
            
            System.out.print("\nLÃ¼tfen bir seÃ§enek girin (1-7): ");
            int secim = scanner.nextInt();
            scanner.nextLine();  // Clear the buffer

            switch (secim) {
                case 1:
                    system.filmEkle();
                    break;
                case 2:
                    system.filmListele();
                    break;
                case 3:
                    system.musteriEkle();
                    break;
                case 4:
                    system.musteriListele();
                    break;
                case 5:
                    system.biletOlustur();
                    break;
                case 6:
                    system.biletListele();
                    break;
                case 7:
                    System.out.println("\nÃ‡Ä±kÄ±yor... GÃ¶rÃ¼ÅŸmek Ã¼zere! ğŸ˜Š");
                    return;
                default:
                    System.out.println("\nGeÃ§ersiz seÃ§enek! LÃ¼tfen 1 ile 7 arasÄ±nda bir sayÄ± girin. ğŸ˜‰");
            }
        }
    }
}
